{
  "compilerOptions": {
    "jsx": "react-jsx",  
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "app.tsx"],
  "exclude": ["node_modules", "dist"]
}
